<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-5">
      <div class="col-xs-12">
        <%= render 'shared/header_news' %>
      </div>
      <div class="col-xs-6">
        <%= render 'shared/pishkhan' %>
      </div>
    </div>
    <div class="col-xs-12 col-md-7 my-1">
      <div class="row justify-content-md-center">
        <% @categories.each do |category| %>
          <div class="col-xs-12 col-md-5 border border-primary m-2">
            <div class="section-title"><%= category.name %></div>
            <%= render 'shared/section' %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
