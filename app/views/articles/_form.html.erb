
<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title, label: 'موضوع' %>
    <%= f.input :content, label: 'محتوا', input_html: { class: "tinymce" } %>
    <%= f.input :photo, label: 'عکس', as: :file %>
    <%= f.input :author, label: 'نویسنده' %>
    <%= f.input :published, label: 'منتشر شده؟' %>
    <%= f.input :category_id, label: 'دسته‌بندی', collection: Category.all %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, label: 'ارسال' %>
  </div>
<% end %>
